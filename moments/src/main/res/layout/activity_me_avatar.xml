<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <me.relex.photodraweeview.PhotoDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/detailavatar_imgvi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            fresco:failureImage="@drawable/img_loadfailed"
            fresco:placeholderImage="@color/backgrey" />
    </RelativeLayout>
</LinearLayout>