<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">


    <!--日期-->
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/userzonelistitem_day"
                style="@style/DayText"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp" />

            <TextView
                android:id="@+id/userzonelistitem_month"
                style="@style/UserZoneText"
                android:text="11月"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_listitem"
        android:orientation="horizontal">

        <!--图片快照-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userzonelistitem_snapshot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="5dp"
            fresco:failureImage="@drawable/img_defaultavatar"
            fresco:placeholderImage="@drawable/img_defaultavatar" />

        <!--文字-->
        <TextView
            android:id="@+id/userzonelistitem_content"
            style="@style/UserZoneText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="从今天开始，都监督我，绝不熬夜，发现我晚睡的小伙伴请强制我去碎觉！！重要的事情说三遍" />

    </LinearLayout>
</LinearLayout>
