<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/global_bg</item>
        <item name="android:windowFullscreen">false</item>
        <item name="no_data_img_tink">@color/no_data_img_tink</item>
        <item name="selectableItemBackground">@drawable/abc_item_background_holo_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="ActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="no_data_img_tink">@color/no_data_img_tink</item>
        <item name="selectableItemBackground">@drawable/abc_item_background_holo_dark</item>
    </style>
    <style name="GraffitiButton">
        <item name="android:textSize">@dimen/mainGraffitiButtonTextSize</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">@dimen/mainGraffitiButtonPaddingTop</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ff181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:drawablePadding">-5dp</item>
    </style>

    <style name="GraffitiButton2">
        <item name="android:background">@drawable/selector_graffitibutton</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:layout_width">55dip</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:shadowColor">#ff181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:drawablePadding">-40dp</item>
    </style>

    <style name="GraffitiButton3">
        <item name="android:paddingTop">14dp</item>
        <item name="android:layout_width">55dip</item>
        <item name="android:layout_height">55dip</item>
        <item name="android:shadowColor">#ff181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:drawablePadding">-40dp</item>
    </style>

    <style name="GraffitiButton4">
        <item name="android:background">#00ffffff</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_width">70dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black666</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DrawTextButton">
        <item name="android:textSize">@dimen/mainGraffitiButtonTextSize</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ff181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:drawablePadding">-35dp</item>
    </style>

    <style name="DrawPictureButton">
        <item name="android:textSize">@dimen/mainGraffitiButtonTextSize</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:background">@color/color_1897F2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#ff181e2a</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:drawablePadding">-100dp</item>
    </style>

    <style name="GraffitiDialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="NormalText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black666</item>
    </style>

    <style name="AccountText">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AvatarText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MeText">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CircleNickName">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black333</item>
    </style>

    <style name="CircleContent">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ContentText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black666</item>
    </style>

    <style name="MeEditText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black666</item>
    </style>

    <style name="DeleteCircleText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black333</item>
    </style>

    <style name="PenButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TabButton">
        <item name="android:textSize">11.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/tabtext</item>
        <item name="android:paddingTop">@dimen/mainGraffitiButtonPaddingTop</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:paddingBottom">4.0dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColorHint">@color/line</item>
    </style>

    <style name="CommonButton">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_radiusbtn</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>