<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_4"
        android:scrollbars="none" >

       <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/btn_freehand"
                android:backgroundTint="@color/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bg_highlight_frame"
                android:onClick="onFreehandBtn"
                android:background="@drawable/btn_freehand_normal2" />

            <ImageView
                android:id="@+id/btn_rect"
                android:backgroundTint="@color/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onRectBtn"
                android:background="@drawable/btn_rect_normal2" />

            <ImageView
                android:id="@+id/btn_bessel"
                android:backgroundTint="@color/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onBesselBtn"
                android:background="@drawable/btn_bessel_normal2" />

            <ImageView
                android:id="@+id/btn_oval"
                android:backgroundTint="@color/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onOvalBtn"
                android:background="@drawable/btn_oval_normal2" />

            <ImageView
                android:id="@+id/btn_line"
                android:backgroundTint="@color/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onLineBtn"
                android:background="@drawable/btn_line_normal2" />

            <ImageView
                android:id="@+id/btn_brokenline"
                android:backgroundTint="@color/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onBrokenlineBtn"
                android:background="@drawable/btn_brokenline_normal2" />

            <ImageView
                android:id="@+id/btn_polygon"
                android:backgroundTint="@color/black"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="onPolygonBtn"
                android:background="@drawable/btn_polygon_normal2" />

           <ImageView
               android:visibility="gone"
               android:backgroundTint="@color/black"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:onClick="onMicroBtn"
               android:background="@drawable/btn_micro_normal" />

           <ImageView
               android:id="@+id/btn_keepdrawing"
               android:backgroundTint="@color/black"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:onClick="onKeepdrawingBtn"
               android:background="@drawable/btn_keepdrawing_normal2" />

           <ImageView
               android:visibility="gone"
               android:backgroundTint="@color/black"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:onClick="onGpsBtn"
               android:background="@drawable/btn_gps_normal"
               android:layout_marginTop="5dp"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>